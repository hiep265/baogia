{
  "name": "baogia",
  "version": "0.1.0",
  "private": true,
  "productName": "BaoGiaPro",
  "description": "BaoGiaPro - Electron + React + Vite + TypeScript",
  "author": "",
  "license": "UNLICENSED",
  "main": "dist-electron/main/index.js",
  "scripts": {
    "dev": "concurrently -k \"vite --host\" \"tsc -w -p tsconfig.main.json\" \"tsc -w -p tsconfig.preload.json\" \"wait-on tcp:5173 file:dist-electron/main/index.js && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron dist-electron/main/index.js\"",
    "build": "vite build && tsc -p tsconfig.main.json && tsc -p tsconfig.preload.json",
    "build:win": "npm run build && electron-builder --win",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.baogia.app",
    "productName": "BaoGiaPro",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "asar": true,
    "extraMetadata": {
      "main": "dist-electron/main/index.js"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.40",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.4.0",
    "vite": "^5.0.0",
    "wait-on": "^7.0.1"
  }
}
